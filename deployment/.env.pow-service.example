# =============================================================================
# POW SERVICE ENVIRONMENT CONFIGURATION
# =============================================================================
# 
# Copy this file to .env and configure for your deployment
# 
# Requirements: 6.3, 10.4
# =============================================================================

# Service Configuration
NODE_ENV=production
PORT=3001
LOG_LEVEL=info
JSON_LOGGING=true

# Redis Configuration (REQUIRED)
REDIS_URL=redis://your-redis-host:6379
# Alternative Redis configuration
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password
# REDIS_DB=0

# POW Service Configuration
POW_SERVICE_MODE=true
WORKER_CONCURRENCY=4

# Monitoring Configuration
METRICS_PORT=9090
HEALTH_CHECK_PORT=8080

# Security Configuration
HOSTNAME=pow-service-1

# Performance Tuning
# Number of worker threads (default: CPU cores - 1)
# POW_WORKER_COUNT=3

# Task timeout in milliseconds (default: 5000)
# POW_TASK_TIMEOUT=5000

# Maximum POW iterations before giving up (default: 8000000)
# POW_MAX_ITERATIONS=8000000

# Cache Configuration
# Redis cache TTL in seconds (default: 300 = 5 minutes)
# POW_CACHE_TTL=300

# Logging Configuration
# LOG_LEVEL options: error, warn, info, debug, trace
# JSON_LOGGING=true for structured logging (recommended for production)