# Worker Environment Variables

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_COMMAND_TIMEOUT=60000  # Redis command timeout in ms (should be > WORKER_QUEUE_TIMEOUT)

# POW Service Configuration
POW_SERVICE_URL=http://localhost:8080

# Worker Configuration
WORKER_ID=  # Will be set by systemd service
WORKER_CONCURRENCY=3  # Concurrent tasks per worker (1-50, default: 3)
WORKER_QUEUE_TIMEOUT=5000  # BLPOP timeout in ms (reduced for faster task pickup)
WORKER_TASK_TIMEOUT=120000  # Max time per task in ms
WORKER_HEARTBEAT_INTERVAL=10000  # Heartbeat interval in ms

# HTTP Configuration
TIMEOUT_MS=60000
PROXY_SERVER=

# Batch Processing Configuration
BATCH_MAX_RETRIES=2

# Logging Configuration
LOG_LEVEL=info
NODE_ENV=production

# Target System Configuration (for credential checking)
TARGET_LOGIN_URL=https://login.account.rakuten.com/sso/authorize?client_id=rakuten_ichiba_top_web&service_id=s245&response_type=code&scope=openid&redirect_uri=https%3A%2F%2Fwww.rakuten.co.jp%2F
